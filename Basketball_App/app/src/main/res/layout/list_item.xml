<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin1">

        <TextView
            android:id="@+id/homeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="BOS"
            tools:ignore="MissingConstraints"
            android:layout_toLeftOf="@+id/date"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:text="dasasda"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/awayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="GSW"
            tools:ignore="MissingConstraints"
            android:layout_toRightOf="@+id/date"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin1"
        android:id="@+id/lin2">



        <ImageView
            android:id="@+id/homeImage"
            android:layout_width="70dp"
            android:layout_height="66dp"
            android:adjustViewBounds="true"
            android:layout_toLeftOf="@+id/homePts"/>

        <TextView
            android:id="@+id/homePts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="00"
            android:layout_toLeftOf="@+id/pont"/>

        <TextView
            android:id="@+id/pont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text=":"
            android:textColor="?android:textColorSecondary"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/awayPts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="00"
            android:layout_toRightOf="@+id/pont"/>

        <ImageView
            android:id="@+id/awayImage"
            android:layout_width="70dp"
            android:layout_height="66dp"
            android:adjustViewBounds="false"
            android:layout_toRightOf="@+id/awayPts"/>

    </RelativeLayout>

    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Törlés"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>


</androidx.cardview.widget.CardView>